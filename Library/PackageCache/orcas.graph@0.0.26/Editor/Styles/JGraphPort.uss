/* THIS FILE IS FROM GRAPHVIEW BUT CONTAINS MODIFICATIONS */

JGraphPort {
    height: 24px;
    align-items: center;
    padding-left: 4px;
    padding-right: 4px;
    port-color: rgb(200, 20, 20);
    disabled-port-color: rgb(70, 70, 70);
}

JGraphPort.input {
    flex-direction: row;
}

JGraphPort.output {
    flex-direction: row-reverse;
}

JGraphPort > #connector {
    border-color: rgb(70, 70, 70);
    background-color: #212121;
    width: 8px;
    height: 8px;
    border-radius: 8px;
    align-items: center;
    justify-content: center;

    margin-left: 4px;
    margin-right: 4px;
    border-left-width: 1px;
    border-top-width: 1px;
    border-right-width: 1px;
    border-bottom-width: 1px;
}

JGraphPort > #connector:hover {
    border-color:  #f0f0f0
}

JGraphPort > #connector > #cap
{
    background-color: #212121;
    width: 4px;
    height: 4px;
    border-radius: 4px;
}

JGraphPort > #connector > #cap:hover
{
    background-color: #f0f0f0;
}

JGraphPort > #connector.portHighlight {
    border-color: #f0f0f0;
}

JGraphPort > #type {
    text-color: #c1c1c1;
    font-size: 11px;
    height: 16px; 
    padding-left: 0;
    padding-right: 0;
    margin-left: 4px; 
    margin-right: 4px;
}

JGraphPort.input > #type {
    text-alignment: middle-left;
}

JGraphPort.output > #type {
    text-alignment:middle-right;
}

/*******************************/
/* LogicPorts colors by types */
/*******************************/

JGraphPort.typeTexture {
    port-color:#FF8B8B;
}

JGraphPort.typeTexture2D {
    /* Same as typeTexture */
    port-color:#FF8B8B;
}

JGraphPort.typeCubemap {
	/* Same as typeTexture */
    port-color:#FF8B8B;
}

JGraphPort.typeGraphScript {
    /* Todo: there is no such type in Unity atm */
    port-color:#E681BA;
}

JGraphPort.typeFloat4 {
    port-color:#FBCBF4;
}

JGraphPort.typeVector4 {
    /* Same as typeFloat4 */
    port-color:#FBCBF4;
}

JGraphPort.typeQuaternion {
    /* Same as typeFloat4 */
    port-color:#FBCBF4;
}

JGraphPort.typeColor {
    /* Same as typeFloat4 */
